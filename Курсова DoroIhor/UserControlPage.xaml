<Window x:Class="DoroIhor.UserControlPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoroIhor"
        mc:Ignorable="d"
        Title="UserControlPage" Height="216" Width="248.5" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Center" >
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBox Text="{Binding Name, Mode=TwoWay}"/>
            <TextBlock Text="Вес (в кг)"/>
            <TextBox Text="{Binding Weight, Mode=TwoWay}"/>
            <TextBlock Text="Рост (в см)"/>
            <TextBox Text="{Binding Height, Mode=TwoWay}"/>
            <Button IsDefault="True" Click="Load_User" Content="Загрузить пользователя"/>
            <Button IsDefault="True" Click="Save_User" Content="Сохранить" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
